{
  "template": "logstash-*",
  "order":    1,
  "settings": {
    "number_of_shards": 3
  },
  "mappings": {
    "chailog": {
      "_all": {
        "enabled": true,
        "omit_norms": true
      }, 
    "dynamic_templates" : [{ 
        "message_field" : { 
          "match" : "message", 
          "match_mapping_type" : "string", 
          "mapping" : { "type" : "string", "index" : "analyzed" } 
        } 
      }, { 
        "string_fields" : { 
          "match" : "*", 
          "match_mapping_type" : "string", 
          "mapping" : { "type" : "string", "index" : "not_analyzed" } 
        } 
      }]
    }
  }
}